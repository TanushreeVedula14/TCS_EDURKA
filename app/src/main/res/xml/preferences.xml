<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:summary="Application Preferences"
        android:title="Maps">
        <EditTextPreference
            android:key="userName"
            android:persistent="true"
            android:summary="User name please"
            android:title="User Name" />
        <Preference android:title="Edit Your Preferred Location below" />
        <EditTextPreference
            android:defaultValue="0.0"
            android:inputType="numberDecimal"
            android:key="latitude"
            android:persistent="true"
            android:summary="Latitude value"
            android:title="Latitude" />
        <EditTextPreference
            android:defaultValue="0.0"
            android:inputType="numberDecimal"
            android:key="longitude"
            android:persistent="true"
            android:summary="Longitude value"
            android:title="longitude" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Weather">
        <EditTextPreference
            android:defaultValue=""
            android:key="prefCity"
            android:persistent="true"
            android:summary="Tap to edit Your City"
            android:title="City" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Slice information."
        android:title="Slice">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="slice"
            android:persistent="true"
            android:summary="To enable Slice"
            android:title="Slice" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Speech Recognition Check"
        android:title="Speech Recognition">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="speech"
            android:persistent="true"
            android:summary="To enable Speech"
            android:title="Speech" />
    </PreferenceCategory>
</PreferenceScreen>